<div class="container p-4">
    <div class="row">
        <div class="col-sm-4 mx-auto">
            <div class="card">
                <div class="card-header">

                </div>
                <div class="card-body">
                    <form action="/links/edit/{{detail.id}}" method="POST">
                        <div class="form-group">
                            <label for="">Title:</label>
                            <input type="text" name="title" placeholder="title" class="form-control" autofocus value="{{detail.title}}">
                        </div>
                        <div class="form-group">
                            <label for="">Url:</label>
                            <input type="url" name="link" placeholder="url" class="form-control" value="{{detail.link}}">
                        </div>
                        <div class="form-group">
                            <label for="">Description:</label>
                            <textarea name="description" cols="30" rows="10" class="form-control">{{detail.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
    </div>
</div>